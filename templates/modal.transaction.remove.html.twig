<modal-transaction-remove inline-template>
    <b-modal
        id="transaction-delete-{{ id }}"
        title="Odstranit transakci?"
        :no-close-on-backdrop="true"
        cancel-title="Ponechat"
        ok-title="Odstranit"
        @ok="submit('{{ path('api_transaction_remove', {'id': id}) }}')"
    >
        <p class="my-4">Záznam bude nenávratně odstraněn.</p>
    </b-modal>
</modal-transaction-remove>
